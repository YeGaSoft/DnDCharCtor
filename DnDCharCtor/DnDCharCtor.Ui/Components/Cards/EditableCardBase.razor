<FluentCard Style=@($"{(HasValidationErrors ? "border-color: red; border-width: medium;" : "")}")>
    <FluentLayout>
        <FluentHeader>
            <FluentStack VerticalAlignment="VerticalAlignment.Center" HorizontalAlignment="HorizontalAlignment.Center">
                <FluentLabel Typo="Typography.PaneHeader">@Title</FluentLabel>
            </FluentStack>
        </FluentHeader>

        <FluentBodyContent Style="overflow:hidden">
            <FluentAccordion>
                <FluentAccordionItem Heading="@StringResources.Button_Properties" Expanded="true">
                    <div style="cursor: pointer;">
                        <FluentStack Orientation="Orientation.Vertical"
                                     VerticalAlignment="VerticalAlignment.Center"
                                     HorizontalAlignment="HorizontalAlignment.Start"
                                     onclick="@EditButtonCallback">
                            @ChildContent
                        </FluentStack>
                    </div>
                </FluentAccordionItem>
            </FluentAccordion>
        </FluentBodyContent>

        <FluentFooter>
            <FluentGrid Justify="JustifyContent.SpaceAround" Style="width: 100%;">
                <FluentGridItem xs="12">
                    <FluentSpacer />
                </FluentGridItem>
                @if (ShowDeleteButton)
                {
                    <FluentGridItem xs="6">
                        <FluentButton Style="width: 100%;" OnClick="DeleteButtonCallback" Appearance="Appearance.Neutral" BackgroundColor="var(--error)">
                            <FluentIcon Value="@(new Icons.Regular.Size20.Delete())" Color="@Color.Neutral" Slot="start" />
                            @DeleteButtonText
                        </FluentButton>
                    </FluentGridItem>
                }
                <FluentGridItem xs="6">
                    <FluentButton Style="width: 100%;" OnClick="EditButtonCallback" IconStart="@EditButtonIcon">@EditButtonText</FluentButton>
                </FluentGridItem>
                @if (ShowPrimaryButton)
                {
                    <FluentGridItem xs="6">
                        <FluentButton Style="width: 100%;" OnClick="PrimaryButtonCallback" Appearance="Appearance.Accent" IconStart="@PrimaryButtonIcon">@PrimaryButtonText</FluentButton>
                    </FluentGridItem>
                }
            </FluentGrid>
        </FluentFooter>
    </FluentLayout> 
</FluentCard>
         