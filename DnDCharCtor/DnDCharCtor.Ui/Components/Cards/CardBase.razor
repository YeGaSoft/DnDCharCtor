<FluentCard Style=@($"{(HasValidationErrors ? "border-color: red; border-width: medium;" : "")}")>
    <FluentHeader>
        <FluentStack VerticalAlignment="VerticalAlignment.Center" HorizontalAlignment="HorizontalAlignment.Center">
            <FluentLabel Typo="Typography.PaneHeader">@Title</FluentLabel>
        </FluentStack>
    </FluentHeader>

    <FluentBodyContent>
        <FluentAccordion>
            <FluentAccordionItem Heading="@StringResources.Button_Properties" Expanded="true">
                <div style="cursor: pointer;">
                    <FluentStack Orientation="Orientation.Vertical"
                                 VerticalAlignment="VerticalAlignment.Center"
                                 HorizontalAlignment="HorizontalAlignment.Start"
                                 onclick="@EditButtonCallback">
                        @ChildContent
                    </FluentStack>
                </div>   
            </FluentAccordionItem>
        </FluentAccordion>
        
        <br />
        <FluentDivider />
        <br />
        <FluentGrid Justify="JustifyContent.SpaceBetween" Style="width: 100%;">
            <FluentGridItem xs="3">
                @{
                    if (ShowDeleteButton)
                    {
                        <FluentButton OnClick="DeleteButtonCallback" Appearance="Appearance.Neutral" BackgroundColor="var(--error)">
                            <FluentIcon Value="@(new Icons.Regular.Size20.Delete())" Color="@Color.Neutral" Slot="start" />
                            @DeleteButtonText
                        </FluentButton>
                    }
                    else
                    {
                        <FluentSpacer />
                    }
                }
            </FluentGridItem>
            <FluentGridItem xs="3">
                <FluentButton OnClick="EditButtonCallback" IconStart="@(new Icons.Regular.Size20.Edit())">@EditButtonText</FluentButton>
            </FluentGridItem>
            <FluentGridItem xs="3">
                @{
                    if (ShowPrimaryButton)
                    {
                        <FluentButton OnClick="PrimaryButtonCallback" Appearance="Appearance.Accent" IconStart="@PrimaryButtonIcon">@PrimaryButtonText</FluentButton>
                    }
                    else
                    {
                        <FluentSpacer />
                    }
                }
            </FluentGridItem>
        </FluentGrid>
    </FluentBodyContent>
</FluentCard>
         