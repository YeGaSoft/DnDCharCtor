@inherits LayoutComponentBase

<CascadingValue Name="@CascadeValueNames.DataContext" Value="@ViewModel">
    <div class="page">
        <div class="sidebar">
            <NavMenu CurrentCharacterExpression="@(() => ViewModel.CurrentCharacterViewModel)" />
        </div>

        <main>
            <article class="content px-4">
                <FluentOverlay 
                    Visible="@ViewModel.IsBusy"
                    Opacity="0.4"
                    Alignment="Align.Center"
                    Justification="JustifyContent.Center">
                    <FluentProgressRing Visible="@ViewModel.IsBusy" />
                </FluentOverlay>
                @Body
            </article>

            <FluentDialogProvider />
            <FluentTooltipProvider />
        </main>
    </div>
</CascadingValue>
